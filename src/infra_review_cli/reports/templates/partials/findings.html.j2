<section class="section-block" id="findings-section" aria-labelledby="findings-title">
    <div class="findings-toolbar no-print">
        <div class="findings-toolbar__row">
            <div class="findings-title-wrap">
                <h2 id="findings-title" class="section-title">Detailed Findings</h2>
                <span id="total-findings-badge" class="total-findings-badge">{{ findings|length }} Items</span>
            </div>

            <div class="findings-actions">
                <label class="search-wrap" for="finding-search">
                    <svg class="search-wrap__icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                    <input type="search" id="finding-search" class="search-input" onkeyup="filterFindings()"
                        placeholder="Search resource, title, or summary" />
                </label>

                <button onclick="exportEngineeringReport()" class="btn-ghost" type="button">Export PDF</button>
            </div>
        </div>

        <div class="findings-toolbar__row">
            <div class="filter-strip" id="pillar-filters">
                <button class="filter-pill active" data-pillar="All" onclick="filterByPillar('All', this)"
                    type="button">All</button>
                {% for p in pillars %}
                <button class="filter-pill" data-pillar="{{ p.name }}" onclick="filterByPillar('{{ p.name }}', this)"
                    type="button">{{ p.name }}</button>
                {% endfor %}
            </div>

            <select id="severity-filter" class="select-input" onchange="filterFindings()">
                <option value="All">All severities</option>
                <option value="Critical">Critical</option>
                <option value="High">High</option>
                <option value="Medium">Medium</option>
                <option value="Low">Low</option>
            </select>
        </div>
    </div>

    <div class="findings-shell glass-card animate-fade-in" style="animation-delay: 0.18s;">
        <div class="table-wrap">
            <table class="findings-table" id="findings-table">
                <thead>
                    <tr>
                        <th>Resource</th>
                        <th>Pillar</th>
                        <th>Finding</th>
                        <th>Severity</th>
                        <th class="table-actions-head">Action</th>
                    </tr>
                </thead>
                <tbody id="findings-tbody">
                    {% for f in findings %}
                    <tr class="finding-row" data-pillar="{{ f.pillar }}" data-severity="{{ f.severity }}" onclick="openDrawer('{{ f.finding_id }}')">
                        <td class="findings-table-td">
                            <span class="finding-resource mono">{{ f.resource_id }}</span>
                            <span class="finding-region">{{ f.region }}</span>
                        </td>
                        <td class="findings-table-td">
                            <span class="badge badge-pillar" data-pillar="{{ f.pillar_slug }}">{{ f.pillar }}</span>
                        </td>
                        <td class="findings-table-td">
                            <span class="finding-title">{{ f.title }}</span>
                            <span class="finding-desc">{{ f.description | striptags | truncate(140) }}</span>
                        </td>
                        <td class="findings-table-td">
                            <span class="badge badge-{{ f.severity | lower }}">{{ f.severity }}</span>
                        </td>
                        <td class="findings-table-td table-actions">
                            <button class="btn-ghost btn-ghost--small" onclick="event.stopPropagation(); openDrawer('{{ f.finding_id }}')"
                                type="button">View</button>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div id="empty-state" class="empty-state hidden">
            <div class="empty-state__icon" aria-hidden="true">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                        d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
            </div>
            <h3>No matching findings</h3>
            <p>Adjust filters or search text to find relevant items.</p>
        </div>

        <div class="findings-footer no-print">
            <span id="showing-text" class="findings-footer__meta">Showing {{ findings|length }} items total.</span>
            <div id="pagination" class="pagination"></div>
        </div>
    </div>
    <p id="export-status" class="export-status hidden" role="status" aria-live="polite"></p>
</section>

<div id="drawer-overlay" class="drawer-overlay" onclick="closeDrawer()"></div>

<aside id="drawer-panel" class="drawer-panel no-print" aria-label="Finding details" aria-live="polite">
    <div class="drawer-panel__head">
        <div class="drawer-panel__head-row">
            <span id="drawer-severity-badge" class="badge badge-critical">Critical</span>
            <button onclick="closeDrawer()" class="drawer-close" type="button" aria-label="Close details panel">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <h3 id="drawer-title" class="drawer-title">Finding title</h3>

        <div class="drawer-meta">
            <span id="drawer-pillar" class="drawer-meta__pillar">Security</span>
            <span class="drawer-meta__dot" aria-hidden="true"></span>
            <span id="drawer-resource" class="drawer-meta__resource mono">resource-id</span>
        </div>
    </div>

    <div class="drawer-panel__body">
        <section class="drawer-block">
            <h4>Observation</h4>
            <div id="drawer-description" class="drawer-copy">Finding description...</div>
        </section>

        <section class="drawer-block">
            <div class="drawer-block__head">
                <h4>Remediation</h4>
                <span id="drawer-effort" class="effort-chip">Low effort</span>
            </div>
            <div id="drawer-remediation" class="drawer-remediation">Remediation steps...</div>
        </section>

        <section class="drawer-resolution">
            <span class="drawer-resolution__label">Status</span>
            <span class="drawer-resolution__value">Ready for resolution</span>
        </section>
    </div>
</aside>
